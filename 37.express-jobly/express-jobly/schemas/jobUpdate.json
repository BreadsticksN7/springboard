{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "required": ["title"],
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30,
            "examples": [
                "test"
            ]
        },
        "salary": {
            "type": "integer",
            "minimum": 0,
            "examples": [
                1000
            ]
        },
        "equity": {
            "type": "string",
            "pattern": "0|(0?\\.[0-9]+)"
        }
    },
    "additionalProperties": false
}